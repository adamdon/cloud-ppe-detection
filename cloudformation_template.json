{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Parameters": {
        "snsTopicArn": {
            "Type": "String",
            "Default": "snsTopicArn"
        },
        "tagId": {
            "Type": "String",
            "Default": "tagId"
        },
        "alertNumber": {
            "Type": "String",
            "Default": "alertNumber"
        },
        "TopicRegion": {
            "Type": "String",
            "Default": "us-east-1"
        }
    },
    "Resources": {
        "Queue1": {
            "Type": "AWS::SQS::Queue",
            "Properties": {
                "QueueName": {
                    "Fn::Sub": "sqs-1${tagId}"
                }
            }
        },
        "Queue2": {
            "Type": "AWS::SQS::Queue",
            "Properties": {
                "QueueName": {
                    "Fn::Sub": "sqs-2${tagId}"
                }
            }
        },
        "SqsQueuePolicy1": {
            "Type": "AWS::SQS::QueuePolicy",
            "Properties": {
                "PolicyDocument": {
                    "Version": "2012-10-17",
                    "Id": "MyQueuePolicy",
                    "Statement": [
                        {
                            "Sid": "Allow-SNS-SendMessage",
                            "Effect": "Allow",
                            "Principal": {
                                "Service": "sns.amazonaws.com"
                            },
                            "Action": [
                                "sqs:SendMessage"
                            ],
                            "Resource": {
                                "Fn::GetAtt": [
                                    "Queue1",
                                    "Arn"
                                ]
                            },
                            "Condition": {
                                "ArnEquals": {
                                    "aws:SourceArn": {
                                        "Ref": "snsTopicArn"
                                    }
                                }
                            }
                        }
                    ]
                },
                "Queues": [
                    {
                        "Ref": "Queue1"
                    }
                ]
            }
        },
        "SqsQueuePolicy2": {
            "Type": "AWS::SQS::QueuePolicy",
            "Properties": {
                "PolicyDocument": {
                    "Version": "2012-10-17",
                    "Id": "MyQueuePolicy",
                    "Statement": [
                        {
                            "Sid": "Allow-SNS-SendMessage",
                            "Effect": "Allow",
                            "Principal": {
                                "Service": "sns.amazonaws.com"
                            },
                            "Action": [
                                "sqs:SendMessage"
                            ],
                            "Resource": {
                                "Fn::GetAtt": [
                                    "Queue2",
                                    "Arn"
                                ]
                            },
                            "Condition": {
                                "ArnEquals": {
                                    "aws:SourceArn": {
                                        "Ref": "snsTopicArn"
                                    }
                                }
                            }
                        }
                    ]
                },
                "Queues": [
                    {
                        "Ref": "Queue2"
                    }
                ]
            }
        },
        "SnsSubscription1": {
            "Type": "AWS::SNS::Subscription",
            "Properties": {
                "Protocol": "sqs",
                "Endpoint": {
                    "Fn::GetAtt": [
                        "Queue1",
                        "Arn"
                    ]
                },
                "Region": {
                    "Ref": "TopicRegion"
                },
                "TopicArn": {
                    "Ref": "snsTopicArn"
                }
            }
        },
        "SnsSubscription2": {
            "Type": "AWS::SNS::Subscription",
            "Properties": {
                "Protocol": "sqs",
                "Endpoint": {
                    "Fn::GetAtt": [
                        "Queue2",
                        "Arn"
                    ]
                },
                "Region": {
                    "Ref": "TopicRegion"
                },
                "TopicArn": {
                    "Ref": "snsTopicArn"
                }
            }
        },
        "LambdaRole1": {
            "Type": "AWS::IAM::Role",
            "DependsOn": [
                "DynamoDbImageTable",
                "Queue1"
            ],
            "Properties": {
                "AssumeRolePolicyDocument": {
                    "Version": "2012-10-17",
                    "Statement": [
                        {
                            "Effect": "Allow",
                            "Principal": {
                                "Service": [
                                    "lambda.amazonaws.com"
                                ]
                            },
                            "Action": [
                                "sts:AssumeRole"
                            ]
                        }
                    ]
                },
                "Policies": [
                    {
                        "PolicyName": {
                            "Fn::Sub": "lambda-1-role-policy${tagId}"
                        },
                        "PolicyDocument": {
                            "Version": "2012-10-17",
                            "Statement": [
                                {
                                    "Effect": "Allow",
                                    "Action": [
                                        "dynamodb:BatchGetItem",
                                        "dynamodb:GetItem",
                                        "dynamodb:Query",
                                        "dynamodb:Scan",
                                        "dynamodb:BatchWriteItem",
                                        "dynamodb:PutItem",
                                        "dynamodb:UpdateItem"
                                    ],
                                    "Resource": {
                                        "Fn::GetAtt": [
                                            "DynamoDbImageTable",
                                            "Arn"
                                        ]
                                    }
                                },
                                {
                                    "Effect": "Allow",
                                    "Action": [
                                        "logs:CreateLogStream",
                                        "logs:PutLogEvents",
                                        "logs:CreateLogGroup"
                                    ],
                                    "Resource": {
                                        "Fn::GetAtt": [
                                            "LambdaLogGroup1",
                                            "Arn"
                                        ]
                                    }
                                },
                                {
                                    "Effect": "Allow",
                                    "Action": [
                                        "sqs:ReceiveMessage",
                                        "sqs:DeleteMessage",
                                        "sqs:GetQueueAttributes",
                                        "sqs:ChangeMessageVisibility"
                                    ],
                                    "Resource": {
                                        "Fn::GetAtt": [
                                            "Queue1",
                                            "Arn"
                                        ]
                                    }
                                },
                                {
                                    "Effect": "Allow",
                                    "Action": [
                                        "xray:PutTraceSegments",
                                        "xray:PutTelemetryRecords"
                                    ],
                                    "Resource": "*"
                                },
                                {
                                    "Effect": "Allow",
                                    "Action": [
                                        "s3:GetObject",
                                        "s3:GetObjectAcl"
                                    ],
                                    "Resource": {
                                        "Fn::Sub": "arn:aws:s3:::s3${tagId}/*"
                                    }
                                },
                                {
                                    "Effect": "Allow",
                                    "Action": [
                                        "rekognition:DetectProtectiveEquipment",
                                        "rekognition:DetectLabels",
                                        "rekognition:GetLabelDetection"
                                    ],
                                    "Resource": "*"
                                }
                            ]
                        }
                    }
                ]
            }
        },
        "LambdaRole2": {
            "Type": "AWS::IAM::Role",
            "DependsOn": [
                "DynamoDbImageTable",
                "Queue2"
            ],
            "Properties": {
                "AssumeRolePolicyDocument": {
                    "Version": "2012-10-17",
                    "Statement": [
                        {
                            "Effect": "Allow",
                            "Principal": {
                                "Service": [
                                    "lambda.amazonaws.com"
                                ]
                            },
                            "Action": [
                                "sts:AssumeRole"
                            ]
                        },
                        {
                            "Effect": "Allow",
                            "Principal": {
                                "Service": "sns.amazonaws.com"
                            },
                            "Action": "sts:AssumeRole"
                        }
                    ]
                },
                "Policies": [
                    {
                        "PolicyName": {
                            "Fn::Sub": "lambda-2-role-policy${tagId}"
                        },
                        "PolicyDocument": {
                            "Version": "2012-10-17",
                            "Statement": [
                                {
                                    "Effect": "Allow",
                                    "Action": [
                                        "dynamodb:BatchGetItem",
                                        "dynamodb:GetItem",
                                        "dynamodb:Query",
                                        "dynamodb:Scan",
                                        "dynamodb:BatchWriteItem",
                                        "dynamodb:PutItem",
                                        "dynamodb:UpdateItem"
                                    ],
                                    "Resource": {
                                        "Fn::GetAtt": [
                                            "DynamoDbImageTable",
                                            "Arn"
                                        ]
                                    }
                                },
                                {
                                    "Effect": "Allow",
                                    "Action": [
                                        "logs:CreateLogStream",
                                        "logs:PutLogEvents",
                                        "logs:CreateLogGroup"
                                    ],
                                    "Resource": {
                                        "Fn::GetAtt": [
                                            "LambdaLogGroup2",
                                            "Arn"
                                        ]
                                    }
                                },
                                {
                                    "Effect": "Allow",
                                    "Action": [
                                        "sqs:ReceiveMessage",
                                        "sqs:DeleteMessage",
                                        "sqs:GetQueueAttributes",
                                        "sqs:ChangeMessageVisibility"
                                    ],
                                    "Resource": {
                                        "Fn::GetAtt": [
                                            "Queue2",
                                            "Arn"
                                        ]
                                    }
                                },
                                {
                                    "Effect": "Allow",
                                    "Action": [
                                        "xray:PutTraceSegments",
                                        "xray:PutTelemetryRecords"
                                    ],
                                    "Resource": "*"
                                },
                                {
                                    "Effect": "Allow",
                                    "Action": [
                                        "s3:GetObject",
                                        "s3:GetObjectAcl"
                                    ],
                                    "Resource": {
                                        "Fn::Sub": "arn:aws:s3:::s3${tagId}/*"
                                    }
                                },
                                {
                                    "Effect": "Allow",
                                    "Action": [
                                        "rekognition:DetectProtectiveEquipment",
                                        "rekognition:DetectLabels",
                                        "rekognition:GetLabelDetection"
                                    ],
                                    "Resource": "*"
                                },
                                {
                                    "Effect": "Allow",
                                    "Action": [
                                        "sns:SetSMSAttributes",
                                        "sns:Publish",
                                        "lambda:GetFunctionConfiguration",
                                        "logs:CreateLogGroup",
                                        "logs:CreateLogStream",
                                        "logs:PutLogEvents",
                                        "logs:PutMetricFilter",
                                        "logs:PutRetentionPolicy"
                                    ],
                                    "Resource": "*"
                                }
                            ]
                        }
                    }
                ]
            }
        },
        "LambdaSourceMapping1": {
            "Type": "AWS::Lambda::EventSourceMapping",
            "DependsOn": [
                "Queue1",
                "Lambda1"
            ],
            "Properties": {
                "BatchSize": 5,
                "Enabled": true,
                "EventSourceArn": {
                    "Fn::GetAtt": [
                        "Queue1",
                        "Arn"
                    ]
                },
                "FunctionName": {
                    "Fn::GetAtt": [
                        "Lambda1",
                        "Arn"
                    ]
                }
            }
        },
        "LambdaSourceMapping2": {
            "Type": "AWS::Lambda::EventSourceMapping",
            "DependsOn": [
                "Queue2",
                "Lambda2"
            ],
            "Properties": {
                "BatchSize": 5,
                "Enabled": true,
                "EventSourceArn": {
                    "Fn::GetAtt": [
                        "Queue2",
                        "Arn"
                    ]
                },
                "FunctionName": {
                    "Fn::GetAtt": [
                        "Lambda2",
                        "Arn"
                    ]
                }
            }
        },
        "LambdaLogGroup1": {
            "Type": "AWS::Logs::LogGroup",
            "Properties": {
                "LogGroupName": {
                    "Fn::Sub": "/aws/lambda/lambda-1${tagId}"
                },
                "RetentionInDays": 365
            }
        },
        "LambdaLogGroup2": {
            "Type": "AWS::Logs::LogGroup",
            "Properties": {
                "LogGroupName": {
                    "Fn::Sub": "/aws/lambda/lambda-2${tagId}"
                },
                "RetentionInDays": 365
            }
        },
        "Lambda1": {
            "Type": "AWS::Lambda::Function",
            "DependsOn": [
                "LambdaRole1",
                "LambdaLogGroup1"
            ],
            "Properties": {
                "Description": "SQS triggered lambda1 for lambda_label_detection.",
                "FunctionName": {
                    "Fn::Sub": "lambda-1${tagId}"
                },
                "Handler": "lambda_label_detection.lambda_handler",
                "Runtime": "python3.7",
                "MemorySize": 128,
                "Timeout": 30,
                "TracingConfig": {
                    "Mode": "Active"
                },
                "Role": {
                    "Fn::GetAtt": [
                        "LambdaRole1",
                        "Arn"
                    ]
                },
                "Code": {
                    "S3Bucket": {
                        "Fn::Sub": "s3${tagId}"
                    },
                    "S3Key": "lambda_label_detection.zip"
                }
            }
        },
        "Lambda2": {
            "Type": "AWS::Lambda::Function",
            "DependsOn": [
                "LambdaRole2",
                "LambdaLogGroup2"
            ],
            "Properties": {
                "Description": "SQS triggered lambda2 for lambda_ppe_detection.",
                "FunctionName": {
                    "Fn::Sub": "lambda-2${tagId}"
                },
                "Handler": "lambda_ppe_detection.lambda_handler",
                "Runtime": "python3.7",
                "MemorySize": 128,
                "Timeout": 30,
                "TracingConfig": {
                    "Mode": "Active"
                },
                "Role": {
                    "Fn::GetAtt": [
                        "LambdaRole2",
                        "Arn"
                    ]
                },
                "Code": {
                    "S3Bucket": {
                        "Fn::Sub": "s3${tagId}"
                    },
                    "S3Key": "lambda_ppe_detection.zip"
                },
                "Environment": {
                    "Variables": {
                        "alertNumber": {
                            "Ref": "alertNumber"
                        }
                    }
                }
            }
        },
        "DynamoDbImageTable": {
            "Type": "AWS::DynamoDB::Table",
            "Properties": {
                "TableName": {
                    "Fn::Sub": "table${tagId}"
                },
                "AttributeDefinitions": [
                    {
                        "AttributeName": "image",
                        "AttributeType": "S"
                    }
                ],
                "KeySchema": [
                    {
                        "AttributeName": "image",
                        "KeyType": "HASH"
                    }
                ],
                "ProvisionedThroughput": {
                    "ReadCapacityUnits": 5,
                    "WriteCapacityUnits": 5
                }
            }
        }
    }
}