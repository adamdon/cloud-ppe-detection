{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Parameters": {
        "snsTopicArn": {
            "Type": "String",
            "Default": "snsTopicArn"
        },
        "tagId": {
            "Type": "String",
            "Default": "tagId"
        },
        "TopicRegion": {
            "Type": "String",
            "Default": "us-east-1"
        }
    },
    "Resources": {
        "Queue1": {
            "Type": "AWS::SQS::Queue",
            "Properties": {
                "QueueName": {
                    "Fn::Sub": "sqs-1${tagId}"
                }
            }
        },
        "LambdaLogGroup1": {
            "Type": "AWS::Logs::LogGroup",
            "Properties": {
                "LogGroupName": {
                    "Fn::Sub": "/aws/lambda/lambda-log-group-1${tagId}"
                },
                "RetentionInDays": 3
            }
        },
        "SqsQueuePolicy": {
            "Type": "AWS::SQS::QueuePolicy",
            "Properties": {
                "PolicyDocument": {
                    "Version": "2012-10-17",
                    "Id": "MyQueuePolicy",
                    "Statement": [
                        {
                            "Sid": "Allow-SNS-SendMessage",
                            "Effect": "Allow",
                            "Principal": {
                                "Service": "sns.amazonaws.com"
                            },
                            "Action": [
                                "sqs:SendMessage"
                            ],
                            "Resource": {
                                "Fn::GetAtt": [
                                    "Queue1",
                                    "Arn"
                                ]
                            },
                            "Condition": {
                                "ArnEquals": {
                                    "aws:SourceArn": {
                                        "Ref": "snsTopicArn"
                                    }
                                }
                            }
                        }
                    ]
                },
                "Queues": [
                    {
                        "Ref": "Queue1"
                    }
                ]
            }
        },
        "SnsSubscription": {
            "Type": "AWS::SNS::Subscription",
            "Properties": {
                "Protocol": "sqs",
                "Endpoint": {
                    "Fn::GetAtt": [
                        "Queue1",
                        "Arn"
                    ]
                },
                "Region": {
                    "Ref": "TopicRegion"
                },
                "TopicArn": {
                    "Ref": "snsTopicArn"
                }
            }
        },
        "LambdaRole1": {
            "Type": "AWS::IAM::Role",
            "DependsOn": [
                "Queue1"
            ],
            "Properties": {
                "AssumeRolePolicyDocument": {
                    "Version": "2012-10-17",
                    "Statement": [
                        {
                            "Effect": "Allow",
                            "Principal": {
                                "Service": [
                                    "lambda.amazonaws.com"
                                ]
                            },
                            "Action": [
                                "sts:AssumeRole"
                            ]
                        }
                    ]
                },
                "Policies": [
                    {
                        "PolicyName": {
                            "Fn::Sub": "lambd-role-policy${tagId}"
                        },
                        "PolicyDocument": {
                            "Version": "2012-10-17",
                            "Statement": [
                                {
                                    "Effect": "Allow",
                                    "Action": [
                                        "logs:CreateLogStream",
                                        "logs:PutLogEvents"
                                    ],
                                    "Resource": {
                                        "Fn::Sub": "arn:${AWS::Partition}:logs:${AWS::Region}:${AWS::AccountId}:log-group:/aws/lambda/lambda-log-group-1${tagId}:*:*"
                                    }
                                },
                                {
                                    "Effect": "Allow",
                                    "Action": [
                                        "sqs:ReceiveMessage",
                                        "sqs:DeleteMessage",
                                        "sqs:GetQueueAttributes",
                                        "sqs:ChangeMessageVisibility"
                                    ],
                                    "Resource": {
                                        "Fn::GetAtt": [
                                            "Queue1",
                                            "Arn"
                                        ]
                                    }
                                },
                                {
                                    "Effect": "Allow",
                                    "Action": [
                                        "xray:PutTraceSegments",
                                        "xray:PutTelemetryRecords"
                                    ],
                                    "Resource": "*"
                                }
                            ]
                        }
                    }
                ]
            }
        },
        "LambdaSourceMapping": {
            "Type": "AWS::Lambda::EventSourceMapping",
            "DependsOn": [
                "Queue1",
                "Lambda1"
            ],
            "Properties": {
                "BatchSize": 5,
                "Enabled": true,
                "EventSourceArn": {
                    "Fn::GetAtt": [
                        "Queue1",
                        "Arn"
                    ]
                },
                "FunctionName": {
                    "Fn::GetAtt": [
                        "Lambda1",
                        "Arn"
                    ]
                }
            }
        },
        "Lambda1": {
            "Type": "AWS::Lambda::Function",
            "DependsOn": [
                "LambdaRole1",
                "LambdaLogGroup1"
            ],
            "Properties": {
                "Description": "SQS triggered lambda 1",
                "FunctionName": {
                    "Fn::Sub": "lambda${tagId}"
                },
                "Handler": "lambda_label_detection.lambda_handler",
                "Runtime": "python3.7",
                "MemorySize": 128,
                "Timeout": 30,
                "TracingConfig": {
                    "Mode": "Active"
                },
                "Role": {
                    "Fn::GetAtt": [
                        "LambdaRole1",
                        "Arn"
                    ]
                },
                "Code": {
                    "S3Bucket": {
                        "Fn::Sub": "s3${tagId}"
                    },
                    "S3Key": "lambda_label_detection.zip"
                }
            }
        }
    }
}